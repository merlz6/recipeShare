<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ../partials/head.ejs %>
    <title>Recipe Recipe</title>
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Indie+Flower|Playball" rel="stylesheet">
    <link rel='stylesheet' href='/css/blog.css' />
  </head>
  <body>
    <header>
      <h1 class='header'>Welcome to the RecipeShare</h1>
    </header>


    <div class='container'>


    <%  for(let i = 0; i < Messages.length; i++){ %>
        <div class='box'>
          <h3><a href="/sessions/<%=Messages[i].id;%>">
<%=Messages[i].name %></h3></a> </br>
          <div class='innerbox'>
            <img class='foodpic' src='<%=Messages[i].image %>'>
          <p><strong>Ingredients: </strong></br>
            <%let ingredientsString = Messages[i].ingredients %>
            <%let ingredientsString2 = ingredientsString.toString() %>
            <%let ingredientsArray = ingredientsString2.split(',') %>
            <%ingredientsArray.forEach(function(element){ %>
            <li>
              <%=element %>
            </li>
            <% }) %>
          </p></br>
          <p><strong>Directions: </strong></br>
            <%=Messages[i].directions %></p>
            </div>
          <form action="/sessions/<%=Messages[i].id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE"/>
        </form>
        </div>
    <%  } %>















    </div>
    <div class='adder'>
      <h2>Don't see your favorite recipe?</br>
        <a href='sessions/recipeNew'> Add it Here</a></h2>
    </div>

  </body>
</html
